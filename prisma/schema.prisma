generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ROLES {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  firstName String
  lastName  String?
  token     String?
  password  String?
  role      ROLES    @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}
